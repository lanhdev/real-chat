<div class="ui container">

  <h1 class="ui header">Home</h1>
  <p>Choose your room</p>

  <div class="ui big relaxed divided list">
    <% @rooms.each do |room| %>
      <div class="item">
        <i class="talk icon"></i>
        <div class="content">
          <a href="<%= room_path(id: room.id) %>" class="header">
            <%= room.name %>
            <div class="ui teal mini label"><%= room.messages.count %></div>
          </a>
        </div>
      </div>
    <% end %>
  </div>

  <%= form_for @room do |f| %>
    <div class="ui form">
      <div class="fields">
        <div class="field"><%= f.text_field :name, placeholder: 'New Room Name' %></div>
        <%= f.fields_for :messages do |message_form| %>
          <div class="field"><%= message_form.text_field :username, placeholder: 'Your name', required: true %></div>
          <div class="field"><%= message_form.text_field :body, placeholder: 'Your first message', required: true %></div>
          <%= f.submit "Create", class: 'ui yellow button' %>
        <% end %>
      </div>
    </div>
  <% end %>

</div>